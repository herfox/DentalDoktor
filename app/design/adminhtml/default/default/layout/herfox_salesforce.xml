<layout>
    <adminhtml_salesforce_prospect_index>
        <reference name="menu">
            <action method="setActive">
                <menupath>herfox_salesforce/prospect</menupath>
            </action>
        </reference>
        <reference name="content">
            <block type="herfox_salesforce/adminhtml_prospect" name="prospect" />

        </reference>
    </adminhtml_salesforce_prospect_index>
